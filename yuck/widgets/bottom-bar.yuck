(include "./yuck/widgets/workspaces.yuck")
(include "./yuck/widgets/clock.yuck")

(defwidget bottom-bar [monitor]
    (box :class "widget-bottom-bar"
         (left :monitor monitor)
         (right)))

(defwidget left [monitor]
    (box :halign "start"
         (workspaces :monitor monitor)))

(defwidget right []
    (box :halign "end"
         (clock)))
