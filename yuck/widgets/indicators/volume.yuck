(defwidget volume []
    (eventbox :class "volume widget"
              :onmiddleclick "pamixer --toggle-mute"
              :onscroll "scripts/set-volume {}"
              (label :class "volume-icon fluent-icon"
                     :tooltip "${volume}%"
                     :text {volume-muted ? "" : volume > 66 ? "" : volume > 33 ? "" : volume > 0 ? "" : ""})))
