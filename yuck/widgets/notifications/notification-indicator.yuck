(defwidget notification-indicator []
    (label :class "notification-indicator ${mode == 0 ? 'notification-indicator-new' : ''}"
           :valign "center"
           :visible {mode != 0 || arraylength(notifications) > 0}
           :text {mode == 1 ? "󰂟" : mode == 2 ? "󰪑" : "${arraylength(notifications) > 0 ? arraylength(notifications) < 30 ? arraylength(notifications) : "30+" : ""}"}))
