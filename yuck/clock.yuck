(defpoll datetime :interval "1s" "date '+%a %b %-e  %l:%M %p'")

(defwidget clock [monitor]
  (eventbox :class "clock-button section hover-button"
            :onclick "scripts/reveal_widgets ${monitor}"
            :cursor "pointer"
            (label :class "clock hover-button-inner"
                   :valign "center"
                   :text datetime)))
