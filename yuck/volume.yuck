(deflisten volume :initial "NaN" "scripts/volume")

(defwidget volume []
  (eventbox
    :onclick "pavucontrol &"
    :onmiddleclick "pamixer --toggle-mute"
    :onscroll "scripts/set_volume {}"
    :class "volume"
    (label :class "volume-icon icon"
           :text {volume == "muted" ? "" : volume > 66 ? "" : volume > 33 ? "" : volume > 0 ? "" : ""})))
